    <module>ems-client</module>
    <module>ems-server</module>
    <module>ems-server-it</module>
    <module>ems-wiki</module>
  </modules>

  <profiles>
    <profile>
      <id>jdk16</id>
      <activation>
        <jdk>1.6</jdk>
      </activation>
      <modules>
        <module>ems-swing-client</module>
        <module>ems-webstart</module>
      </modules>
    </profile>
    <profile>
      <id>solaris</id>
      <activation>
        <os>
          <name>SunOS</name>
        </os>
      </activation>
      <modules>
        <module>ems-pkg</module>
      </modules>
    </profile>
  </profiles>

  <scm>
    <connection>scm:git:git@github.com:javaBin/ems.git</connection>
    <developerConnection>scm:git:git@github.com:javaBin/ems.git</developerConnection>
  </scm>

  <properties>
    <version.derby>10.4.1.3</version.derby>
